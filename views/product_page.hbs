<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>{{pageTitle}}</title>
  <link rel="stylesheet" href="../../node_modules/bootstrap/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/public/css/styles.css">
  <link rel="stylesheet" href="/public/css/magnify.css">
</head>
<body>
  {{> header}}

  <div class="container product__container">
    <div class="row">
      <div class="col-sm-5 col-xs-12">
        <div>
          <img src="../../public{{product.img4_url}}" class="product_page_img_main zoom" alt="{{product.title}}" id="img_main" data-magnify-src="../../public{{product.img4_url}}">
        </div>
        <div>
          <img src="../../public{{product.img4_url}}" class="product_page_img_subs" alt="{{product.title}}" id="img1">
          {{#if product.img5_url}}
            <img src="../../public{{product.img5_url}}" class="product_page_img_subs" alt="{{product.title}}" id="img2">
          {{/if}}
          
          {{#if product.img6_url}}
            <img src="../../public{{product.img6_url}}" class="product_page_img_subs" alt="{{product.title}}" id="img3">
          {{/if}}
        </div>
      </div>
      <div class="col-sm-7 col-xs-12" id="prod_desc">
        <h2 class="product__title">{{product.title}}</h2>
        <h3 class="product__slogan">{{product.slogan}}</h3>
        <h3> Product Description</h3>
        <p class="product__description">{{product.description}}</p>
        <p class="product__id">Product ID: {{product.prod_id}}</p>
      </div>
    </div>
  </div>

  {{> footer}}


<script type="text/javascript" src="../../public/js/jquery.magnify.js"></script>
<script type="text/javascript">
$(document).ready(function() {
  var $zoom = $('.zoom').magnify({
    speed: 200,
    src: $('#img_main').attr('data-magnify-src')
  });
  $zoom.destroy();
});

$('#img1').on('click', function () {
  $('#img_main').attr('src', $(this).attr('src'));
  var imageUrl = "url(" + $(this).attr('src') + ")";
  $('#img_main').siblings().css("background", imageUrl);
});

$('#img2').on('click', function () {
  $('#img_main').attr('src', $(this).attr('src'));
  var imageUrl = "url(" + $(this).attr('src') + ")";
  $('#img_main').siblings().css("background", imageUrl);
});

$('#img3').on('click', function () {
  $('#img_main').attr('src', $(this).attr('src'));
  var imageUrl = "url(" + $(this).attr('src') + ")";
  $('#img_main').siblings().css("background", imageUrl);
});

</script>
</body>
</html>
